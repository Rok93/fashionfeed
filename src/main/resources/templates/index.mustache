{{>layout/header}}

<div style="padding-top: 3%">
    <div class="content-wrap center">
        <div class="page-content">
            <div class="container">
                <div class="list-header">
                    <h1 class="type_h1__3-79W">Fashion FEED</h1>
                    <h3 class="type_h3__2cSZD">패션에 트랜드를 더해드립니다.</h3>
                    <select id="size_selector" name="size" class="feed_number_size form-controller">
                        <option selected="selected" value="10">10개씩</option>
                        <option value="15">15개씩</option>
                        <option value="20">20개씩</option>
                        <option value="25">25개씩</option>
                        <option value="30">30개씩</option>
                    </select>
                </div>

                <!-- 아이템 단위 -->
                <div id="feed" class="item-wrap">
                        {{#feedPage}}
                            <div class="item" id="{{id}}">
                                <figure><img src="{{feedImage}}" alt="{{feedTitle}}" class="feedMediaItem w-100">
                                </figure>
                                <article class="feedTags">
                                    <p class="feedText" style="white-space: pre-line">
                                        {{feedContent}}
                                    </p>
                                </article>
                                <div class="item-ft">
                                    <em class="feedDate">{{createdDate}}</em>
                                    <ul class="main_page feed_icon_wrap">
                                        <li><img src="images/like_icon.png" class="icon-btn_likefull"></img>
                                            <span>{{likefulls.size}}</span></li>
                                        <li><img src="images/comment_icon.png" class="icon-ico_chat"></i>
                                            <span>{{chats.size}}</span></li>
                                        <li><img src="images/share_icon.png" class="icon-ico_share"></i>
                                            <span>{{shares.size}}</span></li>
                                    </ul>
                                </div>
                            </div>
                        {{/feedPage}}
                </div>

            </div>
        </div>
    </div>
</div>
<nav class="main_page paging_nav" aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="#">< 이전</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        <li class="page-item"><a class="page-link" href="#">다음 ></a></li>
    </ul>
</nav>

<!--item Templete -->
<script id="item-template" type="text/template">
    <div class="item" id="{id}">
        <figure><img src="{feedImage}" alt="{feedTitle}" class="feedMediaItem w-100">
        </figure>
        <article class="feedTags">
            <p class="feedText" style="white-space: pre-line">
                {feedContent}
            </p>
        </article>
        <div class="item-ft">
            <em class="feedDate">{createdDate}</em>
            <ul class="main_page feed_icon_wrap">
                <li><img src="images/like_icon.png" class="icon-btn_likefull">
                    <span>{totalLikefullNumber}</span></li>
                <li><img src="images/comment_icon.png" class="icon-ico_chat"></i>
                    <span>{totalChatNumber}</span></li>
                <li><img src="images/share_icon.png" class="icon-ico_share"></i>
                    <span>{totalShareNumber}</span></li>
            </ul>
        </div>
    </div>
</script>

{{>layout/footer}}